<Window x:Class="SpotyClient.View.Test"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:convert="clr-namespace:SpotyClient.Components"
        xmlns:local="clr-namespace:SpotyClient.View"
        xmlns:components="clr-namespace:SpotyClient.Components"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Test" Height="200" Width="800">

    <Window.Resources>
        
    </Window.Resources>

    <Grid>

        <TextBox Background="LightGray" Height="35" Width="200" Text="{Binding add}" />
        <Button Height="35" Width="200" Margin="0 80 0 0" Command="{Binding button}"/>

    </Grid>
</Window>
